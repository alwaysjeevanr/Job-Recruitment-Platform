    {
      "name": "Applications",
      "item": [
        {
          "name": "Apply for Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "jobId",
                  "value": "{{job_id}}",
                  "type": "text"
                },
                {
                  "key": "seekerId",
                  "value": "{{seeker_id}}",
                  "type": "text"
                },
                {
                  "key": "resume",
                  "type": "file",
                  "src": "/path/to/resume.pdf"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/apply",
              "host": ["{{base_url}}"],
              "path": ["api", "apply"]
            }
          }
        },
        {
          "name": "List Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/applications/{{job_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{job_id}}"]
