    {
      "name": "Jobs",
      "item": [
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Senior Full Stack Developer\",\n    \"description\": \"We are looking for an experienced Full Stack Developer to join our team. The ideal candidate should have strong experience with modern web technologies and a passion for building scalable applications.\",\n    \"location\": \"Mumbai, India\",\n    \"requirements\": \"5+ years of experience in web development\\nStrong knowledge of JavaScript, Node.js, and React\\nExperience with MongoDB and RESTful APIs\\nGood understanding of software design patterns\\nExcellent problem-solving skills\",\n    \"skills\": [\"JavaScript\", \"Node.js\", \"React\", \"MongoDB\", \"REST API\", \"Git\"],\n    \"employerId\": \"{{employer_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs"]
            }
          }
        },
        {
          "name": "List Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/jobs?page=1&limit=10&title=developer&location=mumbai&skills=javascript",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "title",
                  "value": "developer"
                },
                {
                  "key": "location",
                  "value": "mumbai"
                },
                {
                  "key": "skills",
                  "value": "javascript"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Applications",
      "item": [
        {
          "name": "Apply for Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "jobId",
                  "value": "{{job_id}}",
                  "type": "text"
                },
                {
                  "key": "seekerId",
                  "value": "{{seeker_id}}",
                  "type": "text"
                },
                {
                  "key": "resume",
                  "type": "file",
                  "src": "/path/to/resume.pdf"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/apply",
              "host": ["{{base_url}}"],
              "path": ["api", "apply"]
            }
          }
        },
        {
          "name": "List Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/applications/{{job_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{job_id}}"]
            }
          }
        }
      ]
    }
  ],
